<% content_for :sitemap do %>
  <span class="current"><%= t("admin.site_configs.settings") %></span>
<% end %>
<h1><%= t("admin.site_configs.settings") %></h1>
<ul class="list-group">
  <% Setting.editable_keys.each do |key| %>
    <li class="list-group-item">
      <div class="mb-1">
        <%= icon_tag("gear") %><a href="<%= edit_admin_site_config_path(key) %>" style="font-size: 15px; color: #2162D2;"><%= key %></a>
        <% if key == "timezone" %>
          <div class="badge">
            当前时区: <%= Time.zone %>
          </div>
        <% end %>
      </div>
      <div class="text-gray"><%= t("setting.#{key}") %></div>
    </li>
  <% end %>
</ul>
